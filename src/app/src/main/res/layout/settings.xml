<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0062BCA7"
    android:backgroundTint="#009688">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/BIMO"
        tools:layout_editor_absoluteY="100dp">

        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6"
                android:fontFamily="@font/comic_sans_ms"
                android:textSize="27sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="IP-адресс:" />

            <EditText
                android:id="@+id/ip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/comic_sans_ms"
                android:textSize="27sp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/settings_apply"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/BIMO_face"
            android:fontFamily="@font/comic_sans_ms"
            android:text="Применить"
            android:textColor="#FF49454F"
            android:textSize="26sp"
            app:cornerRadius="0dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>